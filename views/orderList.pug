extends layout
block content
    header.card-header
        h4.card-title Orders List
    div.card.text-white.bg-dark.mb-3
        div.card-body.form-row
            div.col.form-group.col-md-12   
                form.search(action='/customer/orderslist')
                    div.form-row
                        div.col-md-10
                            input.form-control.formsinput(name='servicerequest' placeholder="Enter your search term(Service Request) ...")
                        div.col-md-2
                            input.btn.btn-block.btn-dark.border-warning.formsinput(type="submit" value="Search")
    div.card.text-white.bg-dark.mb-3
        div.card-body
            table.table.table-striped
                thead 
                    tr
                        th Full Name 
                        th Phone Number
                        th Service Type
                        th Request Type
                        th Timestamp
                        th 
                        th
                tbody
                    if orders.length
                    each order in orders
                        tr
                            td #{order.lastname +' '+ order.firstname}
                            td #{order.phone}
                            td #{order.servicerequest}
                            td #{order.requesttype}
                            td #{order.date}
                            td
                                a(href='/customer/update/'+order._id)
                                    button.btn.btn-dark
                                        i.bi.bi-pencil-square
                            td
                                form(method="post" action='/customer/delete')
                                    input(type="hidden", placeholder="", name="id", value=order._id)
                                    button.btn.btn-dark(type="submit") 
                                        i.bi.bi-x-square
            div.form-row
                div.col.form-group
                    a
                        button.btn.btn-dark.border-warning(style="margin-left: 81%;")
                            h2
                                span 
                                    i.bi.bi-plus-circle-fill
                                span 
                                    a(href='/customer/createorder' style="color:white;") New Order   


